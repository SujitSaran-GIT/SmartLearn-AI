// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  passwordHash  String   @map("password_hash")
  createdAt     DateTime @default(now()) @map("created_at")
  lastLogin     DateTime? @map("last_login")
  
  files         File[]
  jobs          MCQJob[]
  quizzes       Quiz[]
  attempts      QuizAttempt[]
  
  @@map("users")
}

model File {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  filename      String
  storageKey    String   @map("storage_key")
  mimeType      String   @map("mime_type")
  size          Int
  status        String   @default("uploaded")
  numPages      Int?     @map("num_pages")
  extractedText String?  @map("extracted_text") @db.Text
  createdAt     DateTime @default(now()) @map("created_at")
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs          MCQJob[]
  quizzes       Quiz[]
  
  @@index([userId])
  @@map("files")
}

model MCQJob {
  id              String    @id @default(uuid())
  userId          String    @map("user_id")
  fileId          String    @map("file_id")
  questionCount   Int       @map("question_count")
  difficulty      String?
  status          String    @default("pending")
  progress        Int       @default(0)
  quizId          String?   @unique @map("quiz_id")
  error           String?   @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  completedAt     DateTime? @map("completed_at")
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  file            File      @relation(fields: [fileId], references: [id], onDelete: Cascade)
  quiz            Quiz?     @relation(fields: [quizId], references: [id])
  
  @@index([userId, status])
  @@map("mcq_jobs")
}

model Quiz {
  id              String   @id @default(uuid())
  fileId          String   @map("file_id")
  userId          String   @map("user_id")
  title           String
  questionCount   Int      @map("question_count")
  status          String   @default("active")
  createdAt       DateTime @default(now()) @map("created_at")
  
  file            File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions       Question[]
  attempts        QuizAttempt[]
  job             MCQJob?
  
  @@index([userId])
  @@map("quizzes")
}

model Question {
  id              String   @id @default(uuid())
  quizId          String   @map("quiz_id")
  questionText    String   @map("question_text") @db.Text
  options         Json
  correctIndex    Int      @map("correct_index")
  explanation     String?  @db.Text
  sourceSnippet   String?  @map("source_snippet") @db.Text
  difficulty      String?
  
  quiz            Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers         Answer[]
  
  @@index([quizId])
  @@map("questions")
}

model QuizAttempt {
  id              String   @id @default(uuid())
  quizId          String   @map("quiz_id")
  userId          String   @map("user_id")
  score           Float
  correctCount    Int      @map("correct_count")
  wrongCount      Int      @map("wrong_count")
  startedAt       DateTime @default(now()) @map("started_at")
  submittedAt     DateTime @map("submitted_at")
  
  quiz            Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers         Answer[]
  
  @@index([userId])
  @@map("quiz_attempts")
}

model Answer {
  id              String   @id @default(uuid())
  attemptId       String   @map("attempt_id")
  questionId      String   @map("question_id")
  selectedIndex   Int      @map("selected_index")
  isCorrect       Boolean  @map("is_correct")
  
  attempt         QuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question        Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  @@index([attemptId])
  @@map("answers")
}